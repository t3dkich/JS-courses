<div class="flight-ticket">
    <div class="flight-left">
        <img src="{{img}}" alt="">
</div>
    <div class="flight-right">
        <div>
            <h3>{{dest}}</h3><span>{{depDate}}</span>
        </div>
        <div>
            from {{origin}} <span>{{depTime}}</span>
        </div>
        <p>{{seats}} Seats ({{cost}}$ per seat) </p>
        <a href="#/delete/{{_id}}" class="remove">REMOVE</a>
        <a href="#/flightDetails/{{_id}}" class="details">Details</a>
    </div>

</div>